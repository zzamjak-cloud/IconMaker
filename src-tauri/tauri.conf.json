{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "IconMaker",
  "version": "0.1.1",
  "identifier": "com.iconmaker.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "IconMaker",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEM3RTE2MjE4OTJDOEY0OUEKUldTYTlNaVNHR0xoeHhmM21SK1l5RFV6OTdidVhxT2xFb3daN0YwVm51cndYMEJaSDl4MXBLaGIK",
      "endpoints": [
        "https://github.com/zzamjak-cloud/IconMaker/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
